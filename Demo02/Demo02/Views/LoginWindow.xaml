<Window
    x:Class="Demo02.Views.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:Demo02.Core;assembly=Demo02.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Demo02.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="LoginWindow"
    Width="400"
    Height="500"
    prism:ViewModelLocator.AutoWireViewModel="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel
            Grid.Row="0"
            Width="400"
            Background="Transparent"
            DockPanel.Dock="Top"
            LastChildFill="True"
            MouseLeftButtonDown="MouseLeftButtonDown">
            <!--  关闭  -->
            <Button
                Command="{Binding DelegateCommand}"
                CommandParameter="close"
                DockPanel.Dock="Right"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="最大化">
                <materialDesign:PackIcon Kind="Close" />
            </Button>
            <!--  设置  -->
            <Button
                Command="{Binding DelegateCommand}"
                CommandParameter="setting"
                DockPanel.Dock="Right"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="设置">
                <materialDesign:PackIcon Kind="{Binding SettingIcon}" />
            </Button>
            <!--  最小化  -->
            <Button
                Command="{Binding DelegateCommand}"
                CommandParameter="minimize"
                DockPanel.Dock="Right"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="最小化">
                <materialDesign:PackIcon Kind="Minimize" />
            </Button>
            <Grid />
        </DockPanel>
        <materialDesign:Flipper Grid.Row="1" IsFlipped="{Binding IsFlipped}">
            <materialDesign:Flipper.FrontContent>
                <DockPanel LastChildFill="True">
                    <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.PopupRegion}" />
                </DockPanel>
            </materialDesign:Flipper.FrontContent>
            <materialDesign:Flipper.BackContent>
                <Grid />
            </materialDesign:Flipper.BackContent>
        </materialDesign:Flipper>
    </Grid>

</Window>
