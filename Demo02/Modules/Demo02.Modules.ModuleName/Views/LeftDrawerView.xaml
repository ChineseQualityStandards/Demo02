<UserControl
    x:Class="Demo02.Modules.ModuleName.Views.LeftDrawerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Demo02.Modules.ModuleName.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="230"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  按钮数据模板  -->
        <DataTemplate x:Key="NavButtonTemplate">
            <Button
                Margin="5"
                Command="{Binding DataContext.DelegateCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                CommandParameter="{Binding Parameter}"
                Content="{Binding Title}"
                FontFamily="kaiti"
                FontSize="25" />
        </DataTemplate>
    </UserControl.Resources>
    <DockPanel Background="BlanchedAlmond" LastChildFill="False">
        <TextBlock
            HorizontalAlignment="Center"
            DockPanel.Dock="Bottom"
            FontFamily="kaiti"
            Foreground="OrangeRed"
            Text="Message"
            ToolTip="Message" />
        <Image
            Grid.Row="0"
            Width="100"
            Height="100"
            Margin="20"
            DockPanel.Dock="Top"
            Source="pack://application:,,,/Demo02;component/Resourses/Images/MD4XAML.jpg">
            <!--  裁剪  -->
            <Image.Clip>
                <!--  几何-椭圆形  -->
                <EllipseGeometry
                    Center="50,50"
                    RadiusX="50"
                    RadiusY="50" />
            </Image.Clip>
        </Image>
        <TextBlock
            Margin="5"
            HorizontalAlignment="Center"
            DockPanel.Dock="Top"
            FontFamily="kaiti"
            FontSize="20"
            Text="蔺太微" />
        <TextBlock
            Margin="5"
            HorizontalAlignment="Center"
            DockPanel.Dock="Top"
            FontFamily="kaiti"
            Text="UID:000000001" />
        <ItemsControl ItemTemplate="{StaticResource NavButtonTemplate}" ItemsSource="{Binding NavItems}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel
                        Width="220"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </DockPanel>
</UserControl>
