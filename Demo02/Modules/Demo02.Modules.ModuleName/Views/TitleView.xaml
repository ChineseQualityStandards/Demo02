<UserControl
    x:Class="Demo02.Modules.ModuleName.Views.TitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Demo02.Modules.ModuleName.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <!--  菜单栏  -->
    <materialDesign:ColorZone
        Padding="16"
        materialDesign:ElevationAssist.Elevation="Dp4"
        ClipToBounds="False"
        CornerRadius="1"
        DockPanel.Dock="Top"
        Mode="PrimaryDark"
        MouseLeftButtonDown="MouseLeftButtonDown">
        <DockPanel LastChildFill="True">
            <ToggleButton
                DockPanel.Dock="Left"
                IsChecked="{Binding IsLeftDrawerOpen, Mode=TwoWay}"
                Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
            <Button
                Command="{Binding DelegateCommand}"
                CommandParameter="Exit"
                DockPanel.Dock="Right"
                Style="{DynamicResource MaterialDesignIconButton}"
                ToolTip="退出程序">
                <materialDesign:PackIcon Kind="Close" />
            </Button>
            <Button
                Command="{Binding DelegateCommand}"
                CommandParameter="MaximizeOrNormal"
                DockPanel.Dock="Right"
                Style="{DynamicResource MaterialDesignIconButton}"
                ToolTip="最大化">
                <materialDesign:PackIcon Kind="Maximize" />
            </Button>
            <Button
                Command="{Binding DelegateCommand}"
                CommandParameter="Minimize"
                DockPanel.Dock="Right"
                Style="{DynamicResource MaterialDesignIconButton}"
                ToolTip="最小化">
                <materialDesign:PackIcon Kind="Minimize" />
            </Button>
            <TextBlock
                Margin="16,0,10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <materialDesign:PackIcon
                    Width="48"
                    Height="38"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="BookOpenPageVariant" />
            </TextBlock>
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="DFKai-SB"
                FontSize="24"
                Text="知识归纳" />
        </DockPanel>
    </materialDesign:ColorZone>
</UserControl>
