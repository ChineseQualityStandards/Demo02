<UserControl
    x:Class="Demo02.Modules.ModuleName.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image
            Grid.Row="0"
            Width="120"
            Height="120"
            Margin="20"
            Source="pack://application:,,,/Demo02;component/Resourses/Images/MD4XAML.jpg">
            <!--  裁剪  -->
            <Image.Clip>
                <!--  几何-椭圆形  -->
                <EllipseGeometry
                    Center="60,60"
                    RadiusX="60"
                    RadiusY="60" />
            </Image.Clip>
        </Image>


        <TextBox
            Grid.Row="1"
            Height="54"
            Margin="10"
            Padding="7"
            materialDesign:HintAssist.Hint="请输入用户账号名"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.7"
            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
            Text="{Binding Account}" />
        <PasswordBox
            x:Name="PasswordBox"
            Grid.Row="2"
            Height="54"
            Margin="10"
            Padding="7"
            materialDesign:HintAssist.Hint="请输入密码"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.8"
            Style="{DynamicResource MaterialDesignOutlinedPasswordBox}">
            <PasswordBox.InputBindings>
                <KeyBinding
                    Key="Return"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}" />
            </PasswordBox.InputBindings>
        </PasswordBox>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="10,0"
                BorderThickness="0"
                Content="忘记密码"
                Style="{DynamicResource MaterialDesignOutlinedButton}" />
            <Button
                Grid.Column="1"
                Margin="10,0"
                BorderThickness="0"
                Command="{Binding DelegateCommand}"
                CommandParameter="注册"
                Content="注册账号"
                Style="{DynamicResource MaterialDesignOutlinedButton}" />
        </Grid>
        <Button
            Grid.Row="4"
            Height="54"
            Margin="20"
            Command="{Binding LoginCommand}"
            CommandParameter="{Binding ElementName=PasswordBox}"
            Content="登录"
            Style="{DynamicResource MaterialDesignFlatMidBgButton}" />
        <TextBlock
            Grid.Row="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Red"
            Text="{Binding Message}"
            ToolTip="{Binding Message}" />
    </Grid>
</UserControl>
